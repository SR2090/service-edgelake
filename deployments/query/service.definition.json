{
    "org": "anylog",
    "label": "anylog-node for amd64",
    "description": "A sample AnyLog service to deploy a Query Node",
    "documentation": "https://github.com/open-horizon-services/service-anylog/tree/os-dev/README.md",
    "url": "anylog-node",
    "version": "1.3",
    "arch": "amd64",
    "sharable": "multiple",
    "requiredServices": [],
    "userInput": [
        {
            "name": "INIT_TYPE",
            "defaultValue": "prod"
        },
        {
            "name": "ANYLOG_PATH",
            "defaultValue": "/app"
        },
        {
            "name": "LOCAL_SCRIPTS",
            "defaultValue": "/app/deployment-scripts/node-deployment"
        },
        {
            "name": "TEST_DIR",
            "defaultValue": "/app/deployment-scripts/test"
        },
        {
            "name": "LICENSE_KEY",
            "defaultValue": ""
        },
        {
            "name": "NODE_TYPE",
            "defaultValue": "query"
        },
        {
            "name": "NODE_NAME",
            "defaultValue": "anylog-query"
        },
        {
            "name": "COMPANY_NAME",
            "defaultValue": "New Company"
        },
        {
            "name": "ANYLOG_SERVER_PORT",
            "defaultValue": "32348"
        },
        {
            "name": "ANYLOG_REST_PORT",
            "defaultValue": "32349"
        },
        {
            "name": "TCP_BIND",
            "defaultValue": "false"
        },
        {
            "name": "REST_BIND",
            "defaultValue": "false"
        },
        {
            "name": "LEDGER_CONN",
            "defaultValue": "127.0.0.1:32048"
        },
        {
            "name": "MONITOR_NODES",
            "defaultValue": "true"
        }
    ],
    "deployment": {
        "services": {
            "anylog-node": {
                "image": "anylogco/anylog-network:latest",
                "network": "host"
            }
        }
    }
}

{
    "label": "$SERVICE_NAME Deployment Policy",      
    "description": "Policy to auto deploy $SERVICE_NAME",
    "service": {       
      "name": "troy-service-edgelake",
      "org": "$HZN_ORG_ID",    
      "arch": "*",    
      "serviceVersions": [ 
        {
          "version": "$SERVICE_VERSION",
          "priority":{}
        }
      ]
    },
    "properties": [
    ],
    "constraints": [
      "purpose == troy-edgelake-query",
      "openhorizon.allowPrivileged == true"
    ], 
    "userInput": [ 
      {            
        "serviceOrgid": "$HZN_ORG_ID",
        "serviceUrl": "troy-service-edgelake",
        "serviceVersionRange": "[0.0.0,INFINITY)",
        "inputs": [
          {"name":"NODE_TYPE","value":"query"},
          {"name":"NODE_NAME","value":"edgelake-query"},
          {"name":"COMPANY_NAME","value":"Fine Company"},

          {"name":  "ANYLOG_SERVER_PORT", "value":  "32348"},
          {"name":  "ANYLOG_REST_PORT", "value":  "32349"},
          {"name":  "LEDGER_CONN", "value":  "127.0.0.1:32048"},

          {"name": "MONITOR_NODES", "value":  "true"}
        ]
      }
    ]
}  
